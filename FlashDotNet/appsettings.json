{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        // :0 表示随机可用端口
        "Url": "http://*:9000"
      },
      /*
      // 启用 Https 时请取消下面的注释
      "Https": {
        // :0 表示随机可用端口
        "Url": "https://*:9001",
        "Certificate": {
          // 证书路径，为空时使用自签名证书
          // 证书格式为 PFX，可使用 OpenSSL 将 PEM 格式转换为 PFX 格式
          "Path": "",
          "Password": "",
          // 下面的配置为启用自签名证书，正式环境请使用上方的配置
          // 开发环境下可使用 dotnet dev-certs https --trust 命令生成并信任自签名证书
          "Subject": "localhost",
          "Store": "My",
          "Location": "CurrentUser",
          "AllowInvalid": true
        }
      }
      */
    }
  },
  // 测试环境下的 Node.js 端口
  // 为0时随机端口 为-1时不启用Node.js
  "NodeDevPorts": 0,
  // 是否启用 Swagger 文档
  // 可选值：true, false, auto(仅在开发环境启用)
  // 默认值：auto
  "IsUseSwagger": "auto",
  // 可选值：mysql, sqlite, sqlserver, postgresql
  // 默认值：sqlite
  // 为空默认在程序根目录下创建App.db
  "DefaultConnection": "sqlite",
  "ConnectionStrings": {
    "MySqlConnection": "server=127.0.0.1;database=FlashDotNet;user=root;password=qwertyuiop",
    // 测试环境使用 Encrypt=False;TrustServerCertificate=True;用于解决SQL Server 的 SSL 连接问题
    // 正式环境请使用 Encrypt=True;TrustServerCertificate=False;或者删除这两个参数
    "SqlServerConnection": "Server=127.0.0.1;Database=FlashDotNet;User Id=sa;Password=Qwertyuiop1234;Encrypt=False;TrustServerCertificate=True;",
    "SqliteConnection": "Data Source=App.db",
    "PostgreSqlConnection": "Host=127.0.0.1;Database=FlashDotNet;Username=postgres;Password=qwertyuiop"
  },
  "TokenOptions": {
    // "SecretKey" 用于签名和验证 JWT 令牌的秘密密钥。这应该是一个复杂的字符串，确保安全性。
    // 为空默认使用随机字符串
    "SecretKey": "",
    // "Issuer" 是发行 JWT 令牌的实体。这通常是您的应用程序或组织的名称。
    // 为空默认使用随机字符串
    "Issuer": "",
    // "Audience" 指定预期的令牌接收者。这可以是特定的用户、系统或资源的标识符。
    // 为空默认使用随机字符串
    "Audience": "",
    // "ExpireMinutes" 设置 JWT 令牌的有效期，单位为分钟。此值决定了令牌在多久后过期。
    // 为-1时永不过期
    "ExpireMinutes": -1
  }
}
